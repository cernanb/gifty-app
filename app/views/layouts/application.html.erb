<!DOCTYPE html>
<html>
  <head>
    <title>GiftyApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar-header">
      <% if current_user %>
        Signed in as <%= current_user.username %> | <%= link_to "Logout", '/logout' %> | <%= link_to "Home", '/home' %> | <%= link_to "My Wish List", "/lists/#{current_user.id}" %> | <a href='#'> Find Friends</a>
      <% else %>
        <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
      <% end %>
      <br>
    </div>

    <div class="container"
      <%= render 'layouts/messages' %>
      <%= yield %>
    </div>
  </body>
</html>
